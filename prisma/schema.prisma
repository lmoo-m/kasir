// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model category {
  id    Int     @id @default(autoincrement())
  title String
  image String
  type  String
  food  food[]
  drink drink[]
}

model food {
  id         Int      @id @default(autoincrement())
  title      String
  price      String
  image      String
  category   category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model drink {
  id         Int      @id @default(autoincrement())
  title      String
  price      String
  image      String
  category   category @relation(fields: [categoryId], references: [id])
  categoryId Int
}
